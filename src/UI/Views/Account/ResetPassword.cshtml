@model Domain.ViewModels.Account.ResetPasswordViewModel
@{
    ViewBag.TitlePage = "Reset password";
}
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" value="@ViewBag.Id" type="hidden" />
    <div class="form-field">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control"aria-describedby="emailHelp">
    </div>
    <div class="form-field">
        <label asp-for="PasswordConfirm" class="form-label"></label>
        <input asp-for="PasswordConfirm" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="form-field">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}