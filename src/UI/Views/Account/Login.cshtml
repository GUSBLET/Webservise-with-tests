@model Domain.ViewModels.Account.LoginViewModel
@{
    ViewBag.TitlePage = "Login";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-field">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="form-field">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control">
        <a asp-action="SendResetPasswordRequist" asp-controller="Account">Reset password</a>
    </div>
    <div class="form-field">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}