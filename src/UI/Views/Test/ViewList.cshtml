@model List<Domain.ViewModels.Test.ViewListTestViewModel>
@{
}
<div class="row">
    @if(Model is null)
    {
        <h3 style="text-align:center">List is empty</h3>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card form-field" style="width: 24rem;  ">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Description: @item.Description</p>
                    <p class="card-text">TimePassing: @item.TimePassing</p>
                    <p class="card-text">Author: @item.Author.Email</p>
                    <a href="@Url.Action("ViewTest", "Test", new {Id = item.Id})" class="btn btn-primary">View</a>
                </div>
            </div>
        }
    }
</div>
